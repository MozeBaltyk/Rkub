---
# .ansible-lint
exclude_paths:
  - .git/
  - .gitignore
  - Makefile
  - justfile
  - .cache/
  - .github/
  - molecule/
  - docs/
  - scripts/
  - playbooks/tasks # Dir for testing locally

skip_list:
  - yaml[line-length]
  - var-naming[no-role-prefix]
  - command-instead-of-module
  - var-naming[pattern]